<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="first category"
        android:key="first_category">
        <CheckBoxPreference
            android:id="@+id/check1"
            android:key="check1"
            android:summary="summary_option"
            android:title="titlecheckbox1"
            android:defaultValue="false" >
        </CheckBoxPreference>
        <SwitchPreference
            android:id="@+id/switch1"
            android:key="switch1"
            android:summary="summary_switch"
            android:title="titlesummary">
        </SwitchPreference>
        <Preference
            android:key="pref1"
            android:dependency="check1"
            android:summary="something"
            android:title="preference1">
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="second Category"
        android:key="second category">
        <Preference
            android:key="pref2"
            android:dependency="switch1"
            android:summary="somethingelse"
            android:title="another preference">
        </Preference>
    </PreferenceCategory>
        <PreferenceCategory android:title="Debug" android:key="debug_category">
        <Preference android:title="Wipe Shared Preferences" android:key="debug_wipe"/>
        <Preference android:key="debug_user_email" android:title="User Email"/>
        <Preference android:key="debug_user_name" android:title="User Name"/>
        <Preference android:key="debug_user_surname" android:title="User Surname"/>
        <Preference android:key="debug_user_token" android:title="Token"/>
        <SwitchPreference android:key="debug_first_time" android:summaryOn="it's the first time the app runs" android:summaryOff="it's not the first time the app runs"/>
        <Preference android:key="debug_user_selected_cal_id" android:title="Selected Calendar id"/>
        <Preference android:key="debug_user_selected_cal_name" android:title="Selected Calendar name"/>
    </PreferenceCategory>
</PreferenceScreen>